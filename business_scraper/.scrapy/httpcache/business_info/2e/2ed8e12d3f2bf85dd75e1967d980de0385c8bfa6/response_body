    <script type="text/javascript" id="polyfill-script" src="/assets/dist/js/polyfill.min.js"></script>
    <script type="text/javascript" src="/assets/dist/js/app.min.js?cache="></script>
    
    <script type="text/javascript">
        var captchaVerified = false;
        var captchaToken = "";
        var onRecaptchaVerified = function (response) {
            captchaVerified = true;
            captchaToken = response;
        };
        var form = {
            form: document.querySelector('.contact-us-form'),
            submitBtn: document.querySelector('.contact-us-form .button-submit'),
            errorMsg: document.querySelector('.contact-us-form .validation-summary-error-message'),
            captchaErrorMsg: document.querySelector('.contact-us-form .captcha-error-message'),
            robotCheck: document.querySelector('#CaptchaResponse'),

            init: function () {
                var that = this;
                this.submitBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    that.errorMsg.classList.add('hide');
                    that.captchaErrorMsg.classList.add('hide');
                    if (FormValidationUtils.validate(that.form) && captchaVerified) {
                        that.robotCheck.setAttribute("value", captchaToken);
                        that.form.submit();
                    } else {
                        var setFocusToDiv = that.captchaErrorMsg;
                        if (!captchaVerified) {
                            that.captchaErrorMsg.classList.remove('hide');
                        }
                        if (!FormValidationUtils.validate(that.form)) {
                            that.errorMsg.classList.remove('hide');
                            setFocusToDiv = that.errorMsg;
                        }
                        setFocusToDiv.focus();
                    }
                });
            }
        }.init();
    </script>

</body>
